            },
            {
              "text": "<itemMeta>zhongwen/trad/world-52932320</itemMeta>",
              "meta": [
                {
                  "headlines": {
                    "shortHeadline": "新冠疫情：全球最新情況數據一覽",
                    "headline": "新冠疫情：全球最新情況數據一覽",
                    "overtyped": "全球最新疫情數據一覽"
